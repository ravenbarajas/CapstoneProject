<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.CreateGroupRoom">
    <StackLayout>
        <Label Text="Create Group Room" FontSize="Large"/>
        <Entry x:Name="InputField"
               VerticalOptions="CenterAndExpand"
               HorizontalOptions="CenterAndExpand"
               WidthRequest="250"
               Text=""
               Placeholder="Create Your Own Room"/>
        <Button Text="Create Room" HorizontalOptions="Center" VerticalOptions="CenterAndExpand" Clicked="Button_Clicked"></Button>
    </StackLayout>
</ContentPage>