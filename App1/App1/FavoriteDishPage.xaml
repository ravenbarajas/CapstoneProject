<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.FavoriteDishPage">
    <ContentPage.Content>
        <StackLayout Padding="50">

            <Label Text="Favorite Dish" FontSize="Title"/>
            <Label Text="What is your favorite type of dish?" />
            <Label Text="Please select your answer"/>
            <Button Text="Appetizer" />
            <Button Text="Main Course" />
            <Button Text="Dessert" />
            <Button Text="Next" x:Name="Page4to5" Clicked="Page4to5_Clicked" HorizontalOptions="End" BackgroundColor="White"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>