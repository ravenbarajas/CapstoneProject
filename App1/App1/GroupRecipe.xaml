
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.GroupRecipe"
             NavigationPage.HasNavigationBar="False">
    
    <StackLayout BackgroundColor="White">
        <Label Text="Group Recommendations" 
               FontSize="Large"
               HorizontalTextAlignment="Center"
               Margin="30,230,30,0"/>
        <Label Text="Do you want to join or create your own group room?" 
               FontSize="Medium"
               HorizontalTextAlignment="Center"/>
        <Button Text="Create Group Room"
                BackgroundColor="#467fd7" 
                TextColor="White"
                WidthRequest="300"
                HeightRequest="45"
                Margin="30,10,30,5"
                Clicked="Button_Clicked"
                CornerRadius="25"/>
        <Button Text="Join Group Room"
                BackgroundColor="#ce93d8"
                TextColor="White" 
                WidthRequest="300"
                HeightRequest="45"
                Margin="30,0,30,0"
                Clicked="Button_Clicked_1"
                CornerRadius="25"/>
        <Image Source="Bottom.jpg"
               VerticalOptions="Fill"
               Margin="0,160,0,0"/>
    </StackLayout>
</ContentPage>