<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.HomeCookPage">
    <ContentPage.Content>

        <StackLayout Padding="50">

            <Label Text="Home Cook" FontSize="Title"/>
            <Label Text="Who cooks in your home?" />
            <Label Text="Select your answer" />
            <Button Text="Myself" />
            <Button Text="Older siblings" />
            <Button Text="Parent / Guardian" />
            <Button Text="Next" x:Name="Page2to3" Clicked="Page2to3_Clicked" HorizontalOptions="End" BackgroundColor="White"/>

        </StackLayout>

    </ContentPage.Content>

</ContentPage>