<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.GeneratePage"
             NavigationPage.HasNavigationBar="False">
    <StackLayout>
        <Label Text="Recipe Type" 
               FontSize="Large"
               HorizontalTextAlignment="Center"
               Margin="30,230,30,0"/>
        <Label Text="What type of recommendation do you want?" 
               FontSize="Medium"
               HorizontalTextAlignment="Center"/>
        <Button Text="Personalized"
                BackgroundColor="#467fd7" 
                TextColor="White"
                WidthRequest="300"
                HeightRequest="45"
                Margin="30,10,30,5"
                Clicked="Button_Clicked_1"
                CornerRadius="25"/>
        <Button Text="Group"
                BackgroundColor="#ce93d8"
                TextColor="White" 
                WidthRequest="300"
                HeightRequest="45"
                Margin="30,0,30,0"
                Clicked="Button_Clicked"
                CornerRadius="25"/>
        <Image Source="Bottom.jpg"
               VerticalOptions="Fill"
               Margin="0,180,0,0"/>
    </StackLayout>
</ContentPage>