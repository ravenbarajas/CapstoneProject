<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.Views.UserManagement.ResetPassPage"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
            <Label Text="Reset Password"
                       TextColor="Black"
                       Padding="5,0,5,0"
                       FontSize="Large"
                       FontAttributes="Bold"
                       VerticalOptions="Center"/>
            <Entry x:Name="txt_EnterEmail"
                    Placeholder="Enter your Email"
                    Text=""
                    TextColor="#1e4072"
                    HorizontalTextAlignment="Start"/>
            <Button x:Name="btn_SendLink"
                    Text="Send link to Email"
                    BackgroundColor="#467fd7" 
                    TextColor="White"
                    FontAttributes="None"
                    WidthRequest="300"
                    HeightRequest="45"
                    Margin="0,10,0,0"
                    CornerRadius="25"
                    HorizontalOptions="Center"
                    Clicked="SendLink_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>