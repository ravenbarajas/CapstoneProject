<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:yummy="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView"
             x:Class="App1.Views.RecipePresentation.HomePage"
             BackgroundColor="#F2F2F2"
             NavigationPage.HasNavigationBar="False">

    <StackLayout>
        <StackLayout BackgroundColor="#3873F6">
            <Image Source="HomeHeader.png" HorizontalOptions="CenterAndExpand"/>
            <StackLayout Padding="15,5,15,5" BackgroundColor="#3873F6">
                <SearchBar x:Name="txt_searchrecipes"
                       Placeholder="Search food recipes"
                               TextColor="#7F8487"
                               BackgroundColor="White"
                       SearchButtonPressed="txt_searchrecipesSearchButtonPressed"
                               HeightRequest="40"/>
            </StackLayout>
            <Image Source
                   ="DiscoverNewHeader.png" HorizontalOptions="CenterAndExpand"/>
        </StackLayout>
        <StackLayout>
            <Grid HeightRequest="500">
            <ListView x:Name="RandomRecipeListView" 
                  ItemsSource="{Binding recipes}"
                  HasUnevenRows="True"
                  ItemTapped="RecipeListView_ItemTapped"                  
                  IsRefreshing="False"
                  IsPullToRefreshEnabled="False"
                      BackgroundColor="White">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Orientation="Horizontal" BackgroundColor="White" Padding="5,0,5,0">
                            <StackLayout HorizontalOptions="StartAndExpand" BackgroundColor="Transparent">
                                <Grid HorizontalOptions="Start">
                                    <Grid WidthRequest="200">
                                                <Frame Padding="0" CornerRadius="20" WidthRequest="200" BackgroundColor="White">
                                                    <Frame Padding="0"
                                        HeightRequest="200"
                                        WidthRequest="200"
                                        BackgroundColor="White"
                                        IsClippedToBounds="True">
                                                        <Frame.Content>
                                                            <Image Source="{Binding RecipeIMG}"
                                                    HorizontalOptions="FillAndExpand"
                                                    VerticalOptions="FillAndExpand"
                                                    Aspect="AspectFill"/>
                                                        </Frame.Content>
                                                    </Frame>
                                                </Frame>
                                            </Grid>
                                    
                                    <Grid ColumnSpacing="0" Padding="0,0,0,0" VerticalOptions="End" HorizontalOptions="FillAndExpand">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="300"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="0"/>
                                            <RowDefinition Height="65"/>
                                        </Grid.RowDefinitions>
                                        <!--Put a 10 char limit-->
                                                <yummy:PancakeView BackgroundColor="Black" 
                                                                   Grid.Column="0" Grid.Row="1"
                                                                   Opacity=".5"
                                                                   CornerRadius="0,0,20,20">
                                                </yummy:PancakeView>
                                                <Label Grid.Column="0" Grid.Row="1"
                                        Text="{Binding RecipeName}"
                                                FontSize="24" 
                                                FontAttributes="Bold"
                                                TextColor="White"
                                                HorizontalOptions="CenterAndExpand"
                                               VerticalOptions="CenterAndExpand"
                                           Padding="0,0,0,5"/>
                                            </Grid>
                                </Grid>
                            </StackLayout>
                        </StackLayout>
                            
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
            </Grid>
        </StackLayout>

