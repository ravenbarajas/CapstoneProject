<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.Views.RecipeManagement.CookbookPage"
             NavigationPage.HasNavigationBar="False">

    <StackLayout BackgroundColor="White">
        <Frame BackgroundColor="#3873F6" Padding="5,20,5,20">
            <Label Text="Cookbook" 
                FontSize="26" 
                HorizontalTextAlignment="Center"
                VerticalTextAlignment="Center"
                TextColor="White"
                FontAttributes="Bold" 
                Padding="5,0,5,0"/>
        </Frame>

        <StackLayout Padding="100" VerticalOptions="CenterAndExpand" HorizontalOptions="FillAndExpand">
                <Image Source="workinprogress.png"/>
        </StackLayout>
    </StackLayout>
</ContentPage>